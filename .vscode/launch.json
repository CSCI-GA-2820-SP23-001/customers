{
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "service:app",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Nosetests",
            "type": "python",
            "request": "launch",
            "module": "nosetests",
            "args": [
                "--rednose",
                "-s",
                "-v",
                "tests/"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal"
        }
    ]
}